<link rel="stylesheet" href="css/perfil/perfil.css">
<div id="container-perfil">
        {{#if user}}
            {{#if user.imgUrl}}
                <div id="foto" style="background-image: url('{{user.imgUrl}}');"></div>
            {{else}}
                <div id="foto" style="background-image: url('css/perfil/foto-padrao.jpg')"></div>
            {{/if}}   
    <div id="infos">        
            <h2><span id="nome">{{user.firstName}} {{user.lastName}}</span></h2>
            <span id="email">{{user.email}}</span>
        {{/if}}
    </div>
    <form action="/logout" method="post">
        <input type="submit" id="btn-sair" class="btn" value="Sair da Conta">
    </form>
</div>

